<div id="Jobs_List"></div>
<h1>Jobs Here!</h1>
<table>

<% @jobs.each do |job| %>
  <tr class= "<%=cycle('list_line_odd','list_line_even')%>">

   <td>                 

     <%= image_tag(job.image_url, :class => 'list_image') %>
   </td>

     <td class= "list_table">
      <dl>
        <dt><%= 'Company'%></dt>
        <dt><%= 'Position'%></dt>
        <dt><%= 'Discription'%></dt>
        <dt><%= 'Requirement'%></dt>
        <dt><%= 'Headcount'%></dt>
      </dl>
    </td>

    <td class= "list_description">
      <dl>
        <dt><%= job.company%></dt>

        <dt><%= job.title%></dt>

        <dt><%= truncate(strip_tags(job.description), :length => 100)%></dt>

        <dt><%= truncate(strip_tags(job.requirement), :length => 100)%></dt>

        <dt><%= job.headcount%></dt>
         </dl>
    </td>










    <td class="list_actions">
      <%= link_to 'Show', job %><br/>
      <%= link_to 'Edit', edit_job_path(job) %><br/>
      <%= link_to 'Delete!', job, :confirm => 'Are you sure?', :method => :delete %><br/>

    </td>

  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Job', new_job_path %>
